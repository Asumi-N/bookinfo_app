<!DOCTYPE html>
<html>
  <head>
    <title>Bookshare</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  </head>

  <body>
    <header>
      <div class="header-container">
        <div class="header-logo">
          <%= link_to "BookInfoShare", root_path %>
        </div>
        <div class="header-nav">
          <% if user_signed_in? %>
            <%= link_to "/users/#{current_user.id}" do %>
              <%= "#{current_user.name}さん" %>
            <% end %>
            <ul class="header-nav-menu">
              <li><%= link_to "レビュー投稿", new_review_path  %></li>
              <li><%= link_to "ログアウト", destroy_user_session_path, data: { "turbo-method": :delete } %></li>
            </ul>
          <% else %>
            <ul class="header-login-menu">
              <li><%= link_to "ログイン", new_user_session_path %></li>
              <li><%= link_to "新規登録", new_user_registration_path %></li>
              <li><%= link_to "ゲストログイン", users_guest_sign_in_path, data: { "turbo-method": :post } %></li>
            </ul>
          <% end %>
        </div>
      </div>
    </header>
    <main>
      <%= render 'devise/shared/notification' %>
      <%= yield %>
    </main>
    <footer>
      <div class="footer">
        <h2>©️<%= Time.current.year %>BookInfoShare</h2>
      </div>
    </footer>
  </body>
</html>
